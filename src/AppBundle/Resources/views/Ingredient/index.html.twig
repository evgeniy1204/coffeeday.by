{% extends 'AppBundle::base.html.twig' %}

{% block content %}
 <section class="content-header">
  <h1>
    Ингредиенты
  </h1>
</section>
<section class="content">
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Наименование</th>
                            <th>Тип</th>
                            <th>Создан</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ingredient in ingredients %}
                        <tr>
                            <td>{{ ingredient.name }}</td>
                            <td>{{ ingredient.type }}</td>
                            <td>{% if ingredient.created %}{{ ingredient.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}"><button class="btn btn-info btn-flat margin">Редактировать</button></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
