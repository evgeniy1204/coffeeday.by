{% extends 'AppBundle::base.html.twig' %}

{% block content %}
<section class="content">
    <h1>WriteOff</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ writeOff.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ writeOff.stock.ingredient.name }}</td>
            </tr>
            <tr>
                <th>Count</th>
                <td>{{ writeOff.count }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ writeOff.comment }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if writeOff.created %}{{ writeOff.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{% if writeOff.updated %}{{ writeOff.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('writeoff_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('writeoff_edit', { 'id': writeOff.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</section>
{% endblock %}
