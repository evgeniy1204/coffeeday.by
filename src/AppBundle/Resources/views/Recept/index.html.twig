{% extends 'AppBundle::base.html.twig' %}

{% block content %}
<section class="content-header">
  <h1>
    Рецептура
  </h1>
</section>
<section class="content">
	{% if recept_products is defined %}
	<div class="row">
		<div class="col-md-12">
			<div class="box box-success">
	            <div class="box-header with-border">
	              <h3 class="box-title">Товары в меню с рецептом</h3>
	            </div><!-- /.box-header -->
				<div class="box-body">
					{% for name, recept in recepts %}
					    <div class="col-md-3">
					      <div class="box box-default collapsed-box">
					        <div class="box-header with-border">
					          <h3 class="box-title">{{ name }}</h3>
					          <div class="box-tools pull-right">
					            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
					          </div><!-- /.box-tools -->
					        </div><!-- /.box-header -->
					        <div class="box-body">
					        <ul>
					       {% for item in recept.recept %}
					           <li> {{ item.ingredient }}({{ item.type }}) - {{ item.count }} </li>
					       {% endfor %}
					       </ul>
					       <p>Стоимость: {{recept.cost }}  </p>
						       <div class="box-footer">
						        	<a href="{{ path('product_edit', {'id': recept.id}) }}"><button type="button" class="btn btn-block btn-success">Редактировать</button></a>
						        </div><!-- /.box-body -->
					        </div><!-- /.box-body -->
					      </div><!-- /.box -->
					    </div><!-- /.col -->
					{% endfor %}
				</div>
			</div>
		</div>
	 </div><!-- /.row -->
	 {% endif %}
	 <div class="row">
		 <div class="col-md-12">
			<div class="box box-danger">
	            <div class="box-header with-border">
	              <h3 class="box-title">Товары в меню без рецепта</h3>
	            </div><!-- /.box-header -->
				<div class="box-body">
				{% if no_recept_products is empty %}
				<p>Товаров без рецепта не найдено</p>
				{% else %}
					{% for product in no_recept_products %}
					    <div class="col-md-3">
					      <div class="box box-default collapsed-box">
					        <div class="box-header with-border">
					          <h3 class="box-title">{{ product.name }}</h3>
					          <div class="box-tools pull-right">
					            <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-plus"></i></button>
					          </div><!-- /.box-tools -->
					        </div><!-- /.box-header -->
					        <div class="box-body">
					        <a href="{{ path('recept_new') }}"><button type="button" class="btn btn-block btn-success">Добавить рецепт</button></a>
					        </div><!-- /.box-body -->
					      </div><!-- /.box -->
					    </div><!-- /.col -->
					{% endfor %}
				{% endif %}
				</div>
			</div>
		</div>
	 </div><!-- /.row -->
</section>
{% endblock %}
