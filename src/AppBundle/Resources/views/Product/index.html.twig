{% extends 'AppBundle::base.html.twig' %}
{% block content %}
<section class="content-header">
  <h1>
    Меню
  </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Меню</h3>
                </div><!-- /.box-header -->
                <div class="box-body no-padding">
                  <table class="table">
                    <tr>
                        <th>ID</th>
                        <th>Наименование</th>
                        <th>Стоимость</th>
                        <th>Добавлен</th>
                        <th>Обновлен</th>
                        <th>Действия</th>
                    </tr>
                    {% for product in products %}
                        <tr>
                            <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                            <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</a></td>
                            <td>{{ product.cost|number_format(2, '.', ',')  }}</td>
                            <td>{% if product.created %}{{ product.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>{% if product.updated %}{{ product.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('product_edit', { 'id': product.id }) }}"><button class="btn bg-purple btn-flat margin">Редактировать</button></a>
                            </td>
                        </tr>
                    {% endfor %}
                  </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>
{% endblock %}
