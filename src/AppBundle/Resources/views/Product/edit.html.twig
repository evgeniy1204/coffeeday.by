{% extends 'AppBundle::base.html.twig' %}

{% block content %}
<section class="content-header">
  <h1>
    Редактирование
  </h1>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            {{ form_start(edit_form) }}
                {{ form_widget(edit_form) }}
               <button type="submit" class="btn btn-info btn-flat margin">Сохранить</button>
            {{ form_end(edit_form) }}
            {{ form_start(delete_form) }}
                <button type="submit" class="btn btn-danger btn-flat margin">Удалить</button>
            {{ form_end(delete_form) }}
        </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="box">
                <div class="box-body">
                  <div class="recept">
                  {% if recepts %}
                    {% include 'AppBundle:Product:recept.html.twig'%}
                  {% endif %}
                    </div>
                </div><!-- /.box -->
            </div>
      </div>
    </div>
</section>
{% endblock %}



